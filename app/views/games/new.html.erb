<div class="container">
  <div class="letters">
    <h1>Make a word with the following letters:</h1>
    <% @letters.each do |letter| %>
    <p> <%= letter %> </p>
    <% end %>
  </div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="guess" id="form" placeholder="Guessz">
  <input type="submit" id="form">
</form>

</div>
